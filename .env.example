DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_LOG_CHANNEL_ID=your_log_channel_id
DISCORD_VOICE_CHANNEL_ID=your_voice_channel_id
DEEPGRAM_API_KEY=your_deepgram_api_key

# オプション: OpenAI chat completion互換エンドポイント
# 文字起こし結果をLLMに送信して処理する場合に設定
# CHAT_COMPLETION_ENDPOINT_URL=https://api.openai.com/v1/chat/completions
# CHAT_COMPLETION_APIKEY=your_api_key
# CHAT_COMPLETION_MODEL=gpt-4

# オプション: OpenAI互換TTS APIエンドポイント
# LLM応答を音声で出力する場合に設定
# TTS_ENDPOINT_URL=https://api.openai.com/v1/audio/speech
# TTS_MODEL=tts-1
# TTS_VOICE=alloy
# TTS_SPEED=1.0

# オプション: 音量閾値（デフォルト: 150）
# 環境雑音を除外しつつ子音も検出できる値に調整
# VOLUME_THRESHOLD=150

# オプション: 無音判定の基準時間（デフォルト: 1500ms）
# speech_final=trueの場合、この時間無音が続くとログ送信
# speech_final=falseの場合、この時間の3倍無音が続くと送信停止
# BASE_SILENCE_TIME=1500

# オプション: 動的VADしきい値調整
# speech_final後、発話中の平均音量に対する割合でしきい値を引き上げる
# 例: 平均音量が500で比率が0.4なら、しきい値は200に引き上げ
# モバイル版Discordからの低音量ノイズを無視するための機能
# DYNAMIC_THRESHOLD_RATIO=0.4

# オプション: 動的しきい値の最小値（デフォルト: VOLUME_THRESHOLDと同じ）
# 算出されたしきい値がこの値を下回らないようにする
# MIN_ELEVATED_THRESHOLD=150

# オプション: 動的しきい値の最大値（デフォルト: 500）
# 異常に高いしきい値を防ぐための上限値
# MAX_ELEVATED_THRESHOLD=500

# オプション: しきい値引き上げの継続時間（デフォルト: 2000ms）
# speech_final検出後、この時間だけしきい値を引き上げる
# THRESHOLD_ELEVATION_DURATION=2000
